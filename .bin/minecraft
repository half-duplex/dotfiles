#!/bin/bash

java="java"
jopts="-Xmx2G -Xincgc"

case $1 in
    ftb|feedthebeast)
        cd ~/.bin/data/
        exec $java -jar FTB_Launcher.jar
        ;;
    spout|spoutcraft)
        cd ~/.spoutcraft/
        exec $java -jar Spoutcraft.jar
        ;;
    mc|minecraft|*)
        cd ~/.bin/data/
        exec $java $jopts -jar minecraft.jar
        ;;
esac

